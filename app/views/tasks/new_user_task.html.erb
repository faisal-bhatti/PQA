

<%= form_for @task, :url => user_create_task_tasks_path, :html => {:multipart => true} do |f| %>
    <table>
      <tr>
        <td>
          <div>
            title:<br>
            <%= f.text_field :title %>
          </div>

          <div>
            image / screenshot: (jpg, gif, png)<br>
            <%= f.file_field :image %>
          </div>

          <div class="field">
            <%= f.label :task_type %>
            <br>
            <%= f.select :task_type, @task.task_types_list %>
          </div>

          <div class="field">
            <%= f.label :status %>
            <br>
            <%= f.select :status, @task.task_status_list %>
          </div>
        </td>
        <td>
          <div class="field">
            Assigned to:<br>
            <%= f.select :developer_id, options_for_select(@developers) %>
          </div>
          <div class="field">
            project:<br>
            <%= f.select :project_id, options_for_select(@projects) %>
          </div>
          <div>
            description:<br>    <%= f.text_area :description %>
          </div>

        </td>
      </tr>
    </table>
    <p>
      <%= f.submit %>
    </p>
<% end %>